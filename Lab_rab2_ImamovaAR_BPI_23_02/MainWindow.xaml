<Window x:Class="Lab_rab2_ImamovaAR_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 2 Имамова"
        Width="800"
        Height="500"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">

    <DockPanel Margin="10">

        <Button Content="Считать"
                Width="150"
                Margin="0,15,5,5"
                Click="Calc_Click"
                DockPanel.Dock="Bottom"
                HorizontalAlignment="Right"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <GroupBox Header="Формула 1 (sin(f*a))" BorderBrush="Gray">
                    <StackPanel>
                        <RadioButton Name="Radio1" GroupName="FormulaGroup" IsChecked="True" Margin="0,0,0,5"/>
                        <Image Name="ImageP1" Height="30" Margin="0,0,0,5" HorizontalAlignment="Left"
                               Source="/Resources/Formula1.png"/>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="a:" Grid.Column="0"/>
                            <TextBox Text="0,00" Width="70" Name="R1TextA" Margin="0,0,10,0" Grid.Column="1" HorizontalAlignment="Left" 
                                     GotFocus="Input_GotFocus1" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="f:" Grid.Column="2"/>
                            <ComboBox SelectedIndex="0" Name="R1ComboF" Width="70" Grid.Column="3" HorizontalAlignment="Left"
                                      GotFocus="Input_GotFocus1">
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                                <ComboBoxItem Content="7"/>
                                <ComboBoxItem Content="8"/>
                                <ComboBoxItem Content="9"/>
                            </ComboBox>
                        </Grid>

                        <TextBlock Name="ResultText1" Visibility="Collapsed" FontWeight="Bold" Foreground="HotPink" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <GroupBox Header="Формула 2 (cos(f*a) + sin(f*b))" BorderBrush="Gray">
                    <StackPanel>
                        <RadioButton Name="Radio2" GroupName="FormulaGroup" Margin="0,0,0,5"/>
                        <Image Name="ImageP2" Height="23" Margin="0,0,0,5" HorizontalAlignment="Left"
                               Source="/Resources/Formula2.png"/>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="a:" Grid.Column="0"/>
                            <TextBox Text="0,00" Width="70" Name="R2TextA" Margin="0,0,10,0" Grid.Column="1" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus2" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="b:" Grid.Column="2"/>
                            <TextBox Text="0,00" Width="70" Name="R2TextB" Margin="0,0,10,0" Grid.Column="3" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus2" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="f:" Grid.Column="4"/>
                            <ComboBox Name="R2ComboF" SelectedIndex="0" Width="70" Grid.Column="5" HorizontalAlignment="Left"
                                      GotFocus="Input_GotFocus2">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="20"/>
                                <ComboBoxItem Content="30"/>
                                <ComboBoxItem Content="40"/>
                            </ComboBox>
                        </Grid>

                        <TextBlock Name="ResultText2" Visibility="Collapsed" FontWeight="Bold" Foreground="HotPink" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <GroupBox Header="Формула 3 (c*a^2 + d*b^2)" BorderBrush="Gray">
                    <StackPanel>
                        <RadioButton Name="Radio3" GroupName="FormulaGroup" Margin="0,0,0,5"/>
                        <Image Name="ImageP3" Height="30" Margin="0,0,0,5" HorizontalAlignment="Left"
                               Source="/Resources/Formula3.png"/>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="a:" Grid.Column="0"/>
                            <TextBox Text="0,00" Width="50" Name="R3TextA" Margin="0,0,5,0" Grid.Column="1" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus3" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="b:" Grid.Column="2"/>
                            <TextBox Text="0,00" Width="50" Name="R3TextB" Margin="0,0,5,0" Grid.Column="3" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus3" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="c:" Grid.Column="4"/>
                            <ComboBox SelectedIndex="0" Name="R3ComboC" Width="50" Margin="0,0,5,0" Grid.Column="5" HorizontalAlignment="Left"
                                      GotFocus="Input_GotFocus3">
                                <ComboBoxItem Content="0"/>
                                <ComboBoxItem Content="1"/>
                            </ComboBox>

                            <Label Content="d:" Grid.Column="6"/>
                            <ComboBox SelectedIndex="0" Name="R3ComboD" Width="65" Grid.Column="7" HorizontalAlignment="Left"
                                      GotFocus="Input_GotFocus3">
                                <ComboBoxItem Content="-1"/>
                                <ComboBoxItem Content="0"/>
                                <ComboBoxItem Content="1"/>
                            </ComboBox>
                        </Grid>

                        <TextBlock Name="ResultText3" Visibility="Collapsed" FontWeight="Bold" Foreground="HotPink" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <GroupBox Header="Формула 4 (Сумма(c+a)^i)" BorderBrush="Gray">
                    <StackPanel>
                        <RadioButton Name="Radio4" GroupName="FormulaGroup" Margin="0,0,0,5"/>
                        <Image Name="ImageP4" Height="60" Margin="0,0,0,5" HorizontalAlignment="Left"
                               Source="/Resources/Formula4.png"/>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="c:" Grid.Column="0"/>
                            <ComboBox SelectedIndex="0" Name="R4ComboC" Width="70" Margin="0,0,10,0" Grid.Column="1" HorizontalAlignment="Left"
                                      GotFocus="Input_GotFocus4">
                                <ComboBoxItem Content="0"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                            </ComboBox>

                            <Label Content="d:" Grid.Column="2"/>
                            <TextBox Text="0,00" Width="70" Name="R4TextD" Margin="0,0,10,0" Grid.Column="3" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus4" PreviewTextInput="TextBox_PreviewOnlyDigits" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="a:" Grid.Column="4"/>
                            <TextBox Text="0,00" Width="70" Name="R4TextA" Grid.Column="5" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus4" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </Grid>

                        <TextBlock Name="ResultText4" Visibility="Collapsed" FontWeight="Bold" Foreground="HotPink" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <GroupBox Header="Формула 5 (Двойная сумма)" BorderBrush="Gray">
                    <StackPanel>
                        <RadioButton Name="Radio5" GroupName="FormulaGroup" Margin="0,0,0,5"/>
                        <Image Name="ImageP5" Height="40" Margin="0,0,0,5" HorizontalAlignment="Left"
                               Source="/Resources/Formula5.png"/>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="N:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox Text="10" Width="40" Name="R5TextN" Margin="0,0,10,5" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewOnlyDigits" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="K:" Grid.Row="0" Grid.Column="2"/>
                            <TextBox Text="10" Width="40" Name="R5TextK" Margin="0,0,10,5" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewOnlyDigits" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="f:" Grid.Row="0" Grid.Column="4"/>
                            <TextBox Text="1,0" Width="40" Name="R5TextF" Margin="0,0,0,5" Grid.Row="0" Grid.Column="5" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="p:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Text="1,0" Width="40" Name="R5TextP" Margin="0,0,10,0" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="x:" Grid.Row="1" Grid.Column="2"/>
                            <TextBox Text="1,0" Width="40" Name="R5TextX" Margin="0,0,10,0" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label Content="y:" Grid.Row="1" Grid.Column="4"/>
                            <TextBox Text="1,0" Width="40" Name="R5TextY" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Left"
                                     GotFocus="Input_GotFocus5" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </Grid>

                        <TextBlock Name="ResultText5" Visibility="Collapsed" FontWeight="Bold" Foreground="HotPink" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Border>

        </Grid>
    </DockPanel>
</Window>