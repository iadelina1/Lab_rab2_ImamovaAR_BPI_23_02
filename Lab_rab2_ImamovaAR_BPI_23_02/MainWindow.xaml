<Window x:Class="Lab_rab2_ImamovaAR_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вариант 1 - Вычисление формулы" Height="500" Width="500">
    <StackPanel Margin="15">

        <Image Source="formula.png" Height="80" Margin="0,0,0,15" Stretch="Uniform"/>

        <GroupBox Header="Параметры:" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="p:" Width="30" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtP" Width="60" Text="1"/>

                    <TextBlock Text="x:" Width="30" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBox x:Name="txtX" Width="60" Text="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="f:" Width="30" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtF" Width="60" Text="1"/>

                    <TextBlock Text="y:" Width="30" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBox x:Name="txtY" Width="60" Text="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="N:" Width="30" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtN" Width="60" Text="3"/>

                    <TextBlock Text="K:" Width="30" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBox x:Name="txtK" Width="60" Text="2"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Button x:Name="btnCalculate" Content="Вычислить" Click="btnCalculate_Click" 
                Margin="0,10" Padding="15,5" FontSize="12"/>

        <TextBlock x:Name="txtResult" FontSize="14" FontWeight="Bold" 
                  Margin="0,10" Text=""/>

    </StackPanel>
</Window>